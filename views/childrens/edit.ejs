<!DOCTYPE html>
<html lang="pt-br">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Editar Criança</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>

  <%- include('partials/header', { user }) %>

  <main class="container">
    <h1>Editar Criança</h1>

    <div class="card">
      <form action="/children/<%= child._id %>?_method=PUT" method="POST">
        <div>
          <label for="name">Nome:</label>
          <input type="text" id="name" name="name" value="<%= child.name %>" required>
        </div>
        <div>
          <label for="birthDate">Data de Nascimento:</label>
          <input type="date" id="birthDate" name="birthDate" value="<%= child.birthDate ? child.birthDate.toISOString().split('T')[0] : '' %>">
        </div>
        <div>
          <label for="specialNeeds">Necessidades Especiais:</label>
          <input type="text" id="specialNeeds" name="specialNeeds" value="<%= child.specialNeeds %>" placeholder="Nenhuma (opcional)">
        </div>

        <div class="form-actions">
          <button type="submit" class="btn btn-primary">Atualizar Criança</button>
          <a href="/children/<%= child._id %>" class="btn btn-secondary">Cancelar</a>
        </div>
      </form>
    </div>
  </main>

  <%- include('partials/footer') %>

</body>
</html>